<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/news"
    tools:context="com.example.joker.server.Login_Activity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/White"
        android:id="@+id/background_pic"
        android:src="@drawable/userlogo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_mail"
        android:layout_below="@id/background_pic">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_mail"
            android:layout_marginTop="@dimen/font_large_size"
            android:hint="Write your E-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/Black"
            android:background="@drawable/edittext_select"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_mail">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_pass"
            android:layout_marginTop="@dimen/font_small_size"
            android:hint="Write your Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/Black"
            android:background="@drawable/edittext_select"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_load"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_below="@id/lay_pass"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_log"
        android:layout_marginTop="60dp"
        android:text="Login"
        android:layout_below="@id/progress_load"
        android:textColor="@color/Black"
        android:background="@drawable/button_animation"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txt_link"
        android:layout_alignParentBottom="true"
        android:text="@string/link_text"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button1_select"/>
</RelativeLayout>
